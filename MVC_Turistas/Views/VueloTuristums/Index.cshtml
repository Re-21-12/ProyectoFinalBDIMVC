@model IEnumerable<MVC_Turistas.Models.VueloTuristum>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create" class="btn">Crear Nuevo</a>
</p>
<table class="table table-hover border-warning table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoTuristaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVueloNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTuristaNavigation.CodigoTurista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroVueloNavigation.NumeroVuelo)
            </td>
            <td>
                <a asp-action="Edit" class="btn-edit"  asp-route-id="@item.NumeroVueloTurista">Editar</a> |
                <a asp-action="Details" class="btn-detail"  asp-route-id="@item.NumeroVueloTurista">Detalle</a> |
                <a asp-action="Delete" class="btn-delete" asp-route-id="@item.NumeroVueloTurista">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
