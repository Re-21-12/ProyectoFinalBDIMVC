@model MVC_Turistas.Models.SucursalTuristum

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>SucursalTuristum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoSucursalTurista" />
            <div class="form-group">
                <label asp-for="CodigoSucursal" class="control-label"></label>
                <select asp-for="CodigoSucursal" class="form-control" asp-items="ViewBag.CodigoSucursal"></select>
                <span asp-validation-for="CodigoSucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoTurista" class="control-label"></label>
                <select asp-for="CodigoTurista" class="form-control" asp-items="ViewBag.CodigoTurista"></select>
                <span asp-validation-for="CodigoTurista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark" type="button" >Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
