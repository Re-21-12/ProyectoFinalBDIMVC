@model MVC_Turistas.Models.Turistum

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Turistum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodigoTurista" />
            <div class="form-group">
                <label asp-for="NombreUno" class="control-label"></label>
                <input asp-for="NombreUno" class="form-control" />
                <span asp-validation-for="NombreUno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreDos" class="control-label"></label>
                <input asp-for="NombreDos" class="form-control" />
                <span asp-validation-for="NombreDos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreTres" class="control-label"></label>
                <input asp-for="NombreTres" class="form-control" />
                <span asp-validation-for="NombreTres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoUno" class="control-label"></label>
                <input asp-for="ApellidoUno" class="form-control" />
                <span asp-validation-for="ApellidoUno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoDos" class="control-label"></label>
                <input asp-for="ApellidoDos" class="form-control" />
                <span asp-validation-for="ApellidoDos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisResidencia" class="control-label"></label>
                <input asp-for="PaisResidencia" class="form-control" />
                <span asp-validation-for="PaisResidencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroVuelo" class="control-label"></label>
                <select asp-for="NumeroVuelo" class="form-control" asp-items="ViewBag.NumeroVuelo"></select>
                <span asp-validation-for="NumeroVuelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoSucursal" class="control-label"></label>
                <select asp-for="CodigoSucursal" class="form-control" asp-items="ViewBag.CodigoSucursal"></select>
                <span asp-validation-for="CodigoSucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark" type="button" >Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
